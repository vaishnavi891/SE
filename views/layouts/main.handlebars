<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title></title>
  {{!-- google fonts link, bulma link, css links --}}
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/homepage.css" />
  <link rel="stylesheet" href="/css/dashboard.css" />
</head>

<body>
  <main>
    {{!-- navbar created to follow all pages using bulma --}}
    <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        {{!-- linking buttons to corresponding api page --}}
        <a class="navbar-item" href="/">
          <h1 class="title is-4">HARMONII</h1>
        </a>
        <a
          role="button"
          class="navbar-burger burger"
          aria-label="menu"
          aria-expanded="false"
          data-target="navbarBasicExample"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <a href="/" class="navbar-item">Home</a>
          <a href="/resources" class="navbar-item">Resources</a>
          <a href="/about" class="navbar-item">About</a>
          <a href="/signup" class="navbar-item">Sign Up</a>
        </div>

        <div class="navbar-end">
          {{#if logged_in}}
          <div class="navbar-item" style="display: flex; align-items: center; gap: 12px;">
            <a href="/dashboard" class="navbar-item">Dashboard</a>
            <a href="/profile" style="display: flex; align-items: center; gap: 8px;">
              {{#if user.avatar}}
              <img
                src="{{user.avatar}}"
                alt="User Avatar"
                style="border-radius: 50%; width: 32px; height: 32px; object-fit: cover;"
              />
              {{else}}
              <img
                src="/images/default-avatar.png"
                alt="Default Avatar"
                style="border-radius: 50%; width: 32px; height: 32px; object-fit: cover;"
              />{{/if}}
              
            </a>
            <a href="/edit-profile" class="button is-link is-light" style="font-weight: 600; height: 32px; padding: 0 12px;">
              Edit Profile
            </a>
            <div class="buttons" style="margin-left: 8px;">
              <btn id="logout" class="button is-light">Log Out</btn>
            </div>
          </div>
          {{else}}
          <div class="navbar-item">
            <div class="buttons">
              <a href="/login" class="button is-primary">Log in</a>
            </div>
          </div>
          {{/if}}
        </div>
      </div>
    </nav>
    {{{body}}}
  </main>
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.7/index.global.min.js"></script>
  <script src="https://kit.fontawesome.com/92c033c314.js" crossorigin="anonymous"></script>
</body>

</html>
